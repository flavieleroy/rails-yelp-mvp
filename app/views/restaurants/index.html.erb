<div class="container" style="text-align: center">

  <h1>Welcome to our restaurants !</h1>

  <p></p>
  <h5 style="color: #af6413">You can create a new restaurant if you want :</h5>
  <%= link_to "Create a restaurant", new_restaurant_path(@restaurant), class:"btn btn-outline-dark"%>
  <p></p>


    <% @restaurants.each do |restaurant| %>
          <div class="card p-3">
            <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= restaurant.name %></h5>
                  <p><%= restaurant.address %></p>
                  <p><%= restaurant.phone_number %></p>
                  <p><%= restaurant.category %></p>
                  <p></p>
                  <%= link_to "View details", restaurant_path(restaurant), class:"btn btn-outline-dark"%>
              </div>
          </div>
    <% end %>
  </div>




